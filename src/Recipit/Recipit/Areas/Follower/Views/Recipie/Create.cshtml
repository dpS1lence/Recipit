<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
<script>
    $(document).ready(function () {
        var productPopup = $('#product-popup');
        var productList = $('#product-list');
        var productContainer = $('#product-container');

        $('#btn-add-product').click(function () {
            productPopup.toggleClass('hidden');
        });

        $('#searchProduct').on('input', function () {
            var searchTerm = $(this).val();
            populateProductList(searchTerm);
        });

        $('#addNewProduct').click(function () {
            showNewProductForm();
        });

        function populateProductList(searchTerm) {
            // Clear the existing list
            productList.empty();
            console.log(searchTerm);
            // Make an AJAX request to the server for product search
            $.ajax({
                url: '/follower/product/search',
                type: 'GET',
                contentType: 'application/json',
                data: { searchTerm: searchTerm },
                success: function (data) {
                    console.log(data);
                    // Handle the response data and populate the list
                    for (var i = 0; i < data.length; i++) {
                        var currentProduct = data[i];
                        var listItem = $('<li>').text(currentProduct.name);
                        productList.append(listItem);

                        // Attach the click event outside the loop
                        attachClickEvent(listItem, currentProduct.name);
                    }
                    function attachClickEvent(item, productName) {
                        item.click(function () {
                            var selectedProduct = productName;
                            addProductToContainer(selectedProduct);
                            productPopup.addClass('hidden');
                        });
                    }
                },
                error: function (error) {
                    console.log(error);
                }
            });
        }


        // Function to add a product to the product container
        function addProductToContainer(productName) {
            var productItem = $('<div class="product">');
            productItem.append('<input type="hidden" class="product-id" value="1"/>');
            productItem.append('<div class="x-icon" onclick="removeProduct(this)"><i class="fa fa-trash-can"></i></div>');
            productItem.append('<h1 class="product-name">' + productName + '</h1>');

            productContainer.append(productItem);
        }

        // Function to remove a product from the product container
        window.removeProduct = function (element) {
            $(element).closest('.product').remove();
        };

        // Function to show the new product form in the popup
        function showNewProductForm() {
            fillFormForCreate();

            $('#submitNewProduct').click(function () {
                var newProductName = $('#newProductName').val();
                var newProductPhoto = $('#newProductPhoto').val(); // Assuming this is a string
                var newProductCalories = $('#newProductCalories').val();

                // Use AJAX to submit the new product data
                $.ajax({
                    url: '/follower/product/create',
                    type: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify({
                        Name: newProductName,
                        Photo: newProductPhoto,
                        Calories: newProductCalories
                    }),
                    success: function (data) {
                        fillFormForSearch();
                    },
                    error: function (error) {
                        // Handle error
                        console.log(error);
                    }
                });
                console.log('success');
                fillFormForSearch();
            });



            $('#cancelNewProduct').click(function () {
                fillFormForSearch();
            });
        }

        function fillFormForSearch() {
            productPopup.empty();
            productPopup.append('<input type="text" class="search-products" id="searchProduct" placeholder="Search for a product">');
            productPopup.append('<ul id="product-list" class="product-list">');
            productPopup.append('</ul>');
            productPopup.append('<button class="add-new-product-btn" id="addNewProduct">Add New Product</button>');
            $('#searchProduct').on('input', function () {
                var searchTerm = $(this).val();
                console.log('searchProduct');
                populateProductList(searchTerm);
            });

            $('#addNewProduct').click(function () {
                showNewProductForm();
                console.log('addNewProduct');
            });
            productList = $('#product-list');
        }
        function fillFormForCreate() {
            productPopup.empty();
            productPopup.append('<input class="search-products" type="text" id="newProductName" placeholder="Product Name">');
            productPopup.append('<input class="search-products" type="text" id="newProductPhoto" placeholder="Product Photo Url">');
            productPopup.append('<input class="search-products" type="number" id="newProductCalories" placeholder="Calories">');
            productPopup.append('<button class="add-new-product-btn" id="submitNewProduct">Submit</button>');
            productPopup.append('<button class="add-new-product-btn" id="cancelNewProduct">Cancel</button>');
        }
    });
</script>



<script>
    $(document).ready(function () {
        $('#submitBtn').click(function () {
            var title = document.getElementById('postTitle').value;
            var description = document.getElementById('postDescription').value;
            var category = document.getElementById('cars').value;

            // Retrieve the list of product IDs
            var productIds = [];
            $('#product-container .product').each(function () {
                productIds.push($(this).find('#product-id').val());
            });

            var imageData = document.getElementById('image').files[0];

            var formData = new FormData();
            formData.append('Title', title);
            formData.append('Description', description);
            formData.append('Category', category);
            formData.append('ProductIds', productIds.join(',')); // Convert to comma-separated string
            formData.append('Image', imageData);

            $.ajax({
                url: '/posts/create',
                type: 'POST',
                processData: false,
                contentType: false,
                data: formData,
                success: function (data) {
                    console.log(data);
                },
                error: function (error) {
                    console.log(error);
                }
            });
        });
    });
</script>

<script>
