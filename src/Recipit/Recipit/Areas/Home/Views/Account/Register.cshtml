@using Recipit.Models.Account
@model RegisterViewModel
@{
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
    ViewData["Title"] = "Register";
}

<div class="container-section">
    <div class="logo">
        <img class="logo-img" src="~/images/recipit-removebg-preview.png" alt="logo">
    </div>
    <div class="login-container">
        <div class="container-titles">
            <h2>Register</h2>
            <p>More than 15,000 recipes!</p>
        </div>
        <form method="post" class="login-form" asp-area="" asp-controller="Account" asp-action="Register">
            <div class="input-container">
                <i class="fa-solid fa-user"></i>
                <input asp-for="@Model.Username" type="text" placeholder="Username">
            </div>
            <div class="input-container">
                <i class="fa-solid fa-address-book"></i>
                <input asp-for="@Model.FirstName" type="text" placeholder="First Name">
            </div>
            <div class="input-container">
                <i class="fa-solid fa-address-book"></i>
                <input asp-for="@Model.LastName" type="text" placeholder="Last Name">
            </div>
            <div class="input-container">
                <i class="fa-solid fa-envelope"></i>
                <input asp-for="@Model.Email" type="email" placeholder="Email Address">
            </div>
            <div class="input-container">
                <i class="fa-solid fa-lock"></i>
                <input asp-for="@Model.Password" type="password" placeholder="Password">
            </div>
            <button type="submit" class="login-btn">Register</button>
            <a class="google-login"><img class="google-image" src="~/images/google-icon.png" alt="google-image">Continue with Google</a>
            <a class="register-btn-span" asp-area="" asp-controller="Account" asp-action="Login">Looking for Login?</a>
        </form>
    </div>
</div>